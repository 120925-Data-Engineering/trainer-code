erDiagram
    DIM_DATE {
        int date_key PK
        date full_date
        int day_of_month
        string day_name
        int month_num
        string month_name
        int quarter
        int year
        boolean is_weekend
    }
    
    DIM_CUSTOMER {
        int customer_key PK
        string customer_id
        string customer_name
        string loyalty_tier
        string city
        string state
        string country
    }
    
    DIM_PRODUCT {
        int product_key PK
        string product_id
        string product_name
        string category
        string subcategory
        string publisher
        decimal list_price
    }
    
    DIM_STORE {
        int store_key PK
        string store_id
        string store_name
        string region
        string country
        string store_type
    }
    
    FCT_SALES {
        string transaction_id
        int date_key FK
        int customer_key FK
        int product_key FK
        int store_key FK
        int quantity
        decimal unit_price
        decimal discount_percent
        decimal revenue
        decimal discount_amount
    }
    
    DIM_DATE ||--o{ FCT_SALES : "date_key"
    DIM_CUSTOMER ||--o{ FCT_SALES : "customer_key"
    DIM_PRODUCT ||--o{ FCT_SALES : "product_key"
    DIM_STORE ||--o{ FCT_SALES : "store_key"
